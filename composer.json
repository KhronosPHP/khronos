{
    "name": "khronos/khronos",
    "description": "Monorepo for Khronos.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "packages/event-sourcing",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/event-store",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "Khronos\\EventSourcing\\": "packages/event-sourcing",
            "Khronos\\EventStore\\": "packages/event-store"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Khronos\\EventSourcing\\Tests\\Unit\\": "packages/event-sourcing/tests/Unit",
            "Khronos\\EventStore\\Tests\\Unit\\": "packages/event-store/tests/Unit"
        }
    },
    "require": {
        "khronos/event-sourcing": "*",
        "khronos/event-store": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1.3"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
