{
    "name": "khronos/khronos",
    "description": "Monorepo for Khronos.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "packages/event-sourcing",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/event-store",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "khronos/event-sourcing": "*",
        "khronos/event-store": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1.3"
    },
    "config": {
        "sort-packages": true
    }
}
